        {% if report.moneyOutExists == 'No' %}
        <div class="labelvalue push-half--top">
            <div class="label">{{ 'summaryPage.moneyOut.reasonForNoMoneyOut.label' | trans(transOptions, translationDomain) }}</div>
            <div class="value">{{ report.reasonForNoMoneyOut | nl2br}}</div>
        </div>
    </div>
    {% else %}
</div>
{% include '@App/Report/Formatted/Accounts/_categories.html.twig' with {
    'type': 'out',
