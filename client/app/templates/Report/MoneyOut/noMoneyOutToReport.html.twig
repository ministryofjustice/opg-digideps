{% extends '@App/Layouts/application.html.twig' %}

{% import '@App/Macros/macros.html.twig' as macros %}

{% set translationDomain = "report-money-out" %}
{% trans_default_domain translationDomain %}
{% set transOptions = {'%client%': report.client.firstname | striptags } %}

{% block htmlTitle %}{{ 'noMoneyOut.htmlTitle' | trans(transOptions) }}{% endblock %}
{% block pageHeader %}{% endblock %}

{% block linkBack %}
    {{ macros.linkBackStep(backLink, 'back' | trans({}, 'common')) }}
{% endblock %}

{% block pageContent %}

    {% block supportTitleTop %}
        <span class="govuk-caption-xl">{{ 'noMoneyOut.supportTitle' | trans }}</span>
    {% endblock %}
    {% block pageTitle %}
        <h1 class="govuk-heading-xl">{{ 'noMoneyOut.form.explanation.label' | trans(transOptions) }}</h1>
    {% endblock %}


    {{ form_start(form, {attr: {novalidate: 'novalidate' }}) }}

    {{ form_input(form.reasonForNoMoneyOut, '', {
        inputClass: 'govuk-input--width-full',
        'hintText': 'noMoneyOut.form.explanation.hintText' | trans(transOptions, translationDomain),
    }) }}

    {{ macros.saveAndContinueButton(form.save) }}

    {{ form_end(form) }}

{% endblock %}
