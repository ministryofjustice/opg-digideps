{% extends '@App/Layouts/application.html.twig' %}

{% import '@App/Macros/macros.html.twig' as macros %}

{% set translationDomain = "report-money-short" %}
{% trans_default_domain translationDomain %}
{% set transOptions = {'%client%': report.client.firstname | striptags } %}

{% block htmlTitle %}{{ 'existPage.moneyOut.htmlTitle' | trans(transOptions) }}{% endblock %}
{% block pageHeader %}{% endblock %}

{% block linkBack %}
    {{ macros.linkBackStep(backLink, 'back' | trans({}, 'common')) }}
{% endblock %}

{% block pageContent %}

    {{ form_start(form, {attr: {novalidate: 'novalidate' }}) }}

    {{ form_checkbox_group(form.moneyOutExists, 'existPage.moneyOut.form', {
        'fieldSetClass' : 'govuk-radios--inline',
        'legendText' : 'existPage.moneyOut.form.exist.label' | trans(transOptions, translationDomain),
        legend: {
            isPageHeading: true,
            caption: 'existPage.moneyOut.supportTitle' | trans
        }
    }) }}

    {{ macros.saveAndContinueButton(form.save) }}

    {{ form_end(form) }}

{% endblock %}
