{% extends '@App/Layouts/application.html.twig'%}

{% import '@App/Macros/macros.html.twig' as macros %}

{% set translationDomain = "report-pa-fee-expense" %}
{% trans_default_domain translationDomain %}
{% set transOptions = {'%client%': report.client.firstname | striptags } %}

{% block htmlTitle %}{{ 'startPage.htmlTitle' | trans }}{% endblock %}
{% block pageTitle %}{{ 'startPage.pageTitle' | trans }}{% endblock %}


{% block breadcrumbs %}{{ macros.breadcrumbs(report) }}{% endblock %}

{% block pageContent %}

    <div class="text">
        <p class="govuk-body">{{ 'startPage.pageSectionDescription1' | trans(transOptions) }}</p>
        <ul class="govuk-list govuk-list--bullet">
        	<li>{{ 'startPage.listItem01' | trans(transOptions) }}</li>
        	<li>{{ 'startPage.listItem02' | trans(transOptions) }}</li>
        	<li>{{ 'startPage.listItem03' | trans(transOptions) }}</li>
        	<li>{{ 'startPage.listItem04' | trans(transOptions) }}</li>
        	<li>{{ 'startPage.listItem05' | trans(transOptions) }}</li>
        	<li>{{ 'startPage.listItem06' | trans(transOptions) }}</li>
        	<li>{{ 'startPage.listItem07' | trans(transOptions) }}</li>
        </ul>
        <p class="govuk-body">{{ 'startPage.pageSectionDescription2' | trans(transOptions) }}</p>
    </div>

    {{ macros.startSectionButton(path('pa_fee_expense_fee_exist', { 'reportId': report.id}), 'startPage.startButton' | trans) }}

    {# Pagination #}
    {% include '@App/Report/_nextprevious.html.twig' with {
        'report': report,
        'sectionId': 'paFeeExpense',
    } %}

{% endblock %}
