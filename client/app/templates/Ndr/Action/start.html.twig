{% extends '@App/Layouts/application.html.twig'%}

{% import '@App/Macros/macros.html.twig' as macros %}

{% set translationDomain = "ndr-actions" %}
{% trans_default_domain translationDomain %}
{% set transOptions = {'%client%': ndr.client.firstname | striptags } %}

{% block htmlTitle %}{{ 'startPage.htmlTitle' | trans }}{% endblock %}
{% block pageTitle %}{{ 'startPage.pageTitle' | trans }}{% endblock %}


{% block breadcrumbs %}{{ macros.breadcrumbs(ndr) }}{% endblock %}

{% block pageContent %}

	<div class="text">
	    <p class="govuk-body">{{ 'startPage.pageSectionDescription1' | trans(transOptions) }}</p>
	    <p class="govuk-body">{{ 'startPage.pageSectionDescription2' | trans(transOptions) }}</p>

        <details class="govuk-details" data-module="govuk-details">
            <summary class="govuk-details__summary">
                <span class="govuk-details__summary-text">{{ 'startPage.hiddenText01.summary' | trans(transOptions) }}</span>
            </summary>
            <div class="govuk-details__text">
                <p class="govuk-body">{{ 'startPage.hiddenText01.content.para01' |trans(transOptions) }}</p>
                <p class="govuk-body">{{ 'startPage.hiddenText01.content.para02' |trans(transOptions) }}</p>
                <ul class="govuk-list govuk-list--bullet">
                    <li>{{ 'startPage.hiddenText01.content.listItem01' | trans(transOptions) }}</li>
                    <li>{{ 'startPage.hiddenText01.content.listItem02' | trans(transOptions) }}</li>
                    <li>{{ 'startPage.hiddenText01.content.listItem03' | trans(transOptions) }}</li>
                </ul>
                <p class="govuk-body">
                    {{ 'startPage.hiddenText01.content.para03.beforeMarkupText' |trans(transOptions) }}
                    <a href="{{ 'startPage.hiddenText01.content.para03.linkText' |trans(transOptions) }}">
                        {{ 'startPage.hiddenText01.content.para03.linkText' |trans(transOptions) }}
                    </a>{{ 'startPage.hiddenText01.content.para03.afterMarkupText' |trans(transOptions) }}
                </p>
            </div>
        </details>
	</div>

    {{ macros.startSectionButton(path('ndr_actions_step', { 'ndrId': ndr.id, 'step': 1 }), 'startPage.startButton' | trans ) }}

    {# Pagination #}
    {% include '@App/Report/_nextprevious.html.twig' with {
        'report': ndr,
        'sectionId': 'actions',
    } %}

{% endblock %}
