{% extends '@App/Layouts/application.html.twig' %}

{% import '@App/Macros/macros.html.twig' as macros %}

{% set translationDomain = "ndr-assets" %}
{% trans_default_domain translationDomain %}
{% set transOptions = {'%client%': ndr.client.firstname | striptags } %}

{% block htmlTitle %}{{ 'addAnotherPage.htmlTitle' | trans }}{% endblock %}
{% block pageTitle %}{{ 'addAnotherPage.pageTitle' | trans }}{% endblock %}

{% block breadcrumbs %}{{ macros.breadcrumbs(ndr) }}{% endblock %}

{% block pageContent %}

    {{ form_start(form, {attr: {novalidate: 'novalidate' }}) }}

    {{ form_checkbox_group(form.addAnother, 'addAnotherPage.form.addAnother', {
        'fieldSetClass' : 'inline',
        'legendClass' : 'govuk-fieldset__legend--s'
    }) }}

    {{ macros.addAnotherSaveButton(form.save) }}

    {{ form_end(form) }}

{% endblock %}
