{% extends '@App/Layouts/application.html.twig'%}

{% import '@App/Macros/macros.html.twig' as macros %}

{% set translationDomain = "ndr-more-info" %}
{% trans_default_domain translationDomain %}
{% set transOptions = {'%client%': ndr.client.firstname | striptags } %}

{% block htmlTitle %}{{ 'startPage.htmlTitle' | trans }}{% endblock %}
{% block pageTitle %}{{ 'startPage.pageTitle' | trans }}{% endblock %}


{% block breadcrumbs %}{{ macros.breadcrumbs(ndr) }}{% endblock %}

{% block pageContent %}

    <div class="text">
        <p class="govuk-body">{{ 'startPage.pageSectionDescription1' | trans(transOptions) }}</p>
        <p class="govuk-body">{{ 'startPage.pageSectionDescription2' | trans(transOptions) }}</p>
        <p class="govuk-body">
            {{ 'startPage.pageSectionDescription3.beforeMarkupText' | trans(transOptions) }}
            <a href="{{ 'startPage.pageSectionDescription3.link' | trans(transOptions) }}">
                {{ 'startPage.pageSectionDescription3.linkText' | trans(transOptions) }}
            </a>
            {{ 'startPage.pageSectionDescription3.afterMarkupText' | trans(transOptions) }}
        </p>
    </div>

    {{ macros.startSectionButton(path('ndr_other_info_step', { 'ndrId': ndr.id, 'step': 1 }), 'startPage.startButton' | trans ) }}

    {# Pagination #}
    {% include '@App/Report/_nextprevious.html.twig' with {
        'report': ndr,
        'sectionId': 'otherInfo',
    } %}

{% endblock %}
