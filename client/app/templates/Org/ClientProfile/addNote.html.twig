{% extends '@App/Layouts/application.html.twig' %}

{% import '@App/Macros/macros.html.twig' as macros %}

{% set translationDomain = "client-notes" %}
{% trans_default_domain translationDomain %}
{% set page = "addNote" %}

{% block htmlTitle %}{{ (page ~ '.htmlTitle') | trans }}{% endblock %}
{% block pageTitle %}{{ (page ~ '.pageTitle') | trans }}{% endblock %}


{% block supportTitleTop %}
    {{ (page ~ '.supportTitle') | trans({'%fullName%': client.fullname | title}) }}
{% endblock %}

{% block breadcrumbs %}
    {{ macros.breadcrumbs(report) }}
{% endblock %}

{% block pageContent %}

    {{ macros.notification('info', ('pageNotice') | trans) }}

    {{ form_start(form, {attr: {novalidate: 'novalidate' }}) }}

    {{ form_input(form.title,'form.title') }}

    {{ form_input(form.content,'form.content') }}

    {{ form_select(form.category,'form.category') }}

    {{ form_submit(form.save,'form.save', {'buttonClass': 'behat-link-save'}) }}

    <a href="{{ backLink }}" class="govuk-link button-link">{{ 'cancel' | trans({}, 'common') }}</a>

    {{ form_end(form) }}

{% endblock %}
