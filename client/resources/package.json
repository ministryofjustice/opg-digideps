{
  "name": "govuk_digideps",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "node deps-builder.js",
    "lint": "standard assets/javascripts",
    "fix": "standard --fix assets/javascripts",
    "test": "jest assets/javascripts/__tests__ --verbose --env=jsdom"
  },
  "devDependencies": {
    "@babel/plugin-proposal-class-properties": "^7.18.6",
    "@babel/plugin-transform-classes": "^7.28.4",
    "@babel/preset-env": "^7.28.5",
    "@jest/globals": "^29.3.1",
    "babel-jest": "^30.2.0",
    "esbuild": "^0.27.0",
    "govuk-elements-sass": "^3.1.0",
    "jest": "^29.3.1",
    "jest-environment-jsdom": "^29.4.1",
    "jest-fetch-mock": "^3.0.3",
    "jquery": "^3.6.0",
    "sass-embedded": "^1.93.3",
    "standard": "^16.0.4"
  },
  "dependencies": {
    "@ministryofjustice/frontend": "^6.0.0",
    "@testing-library/dom": "^9.2.0",
    "@testing-library/user-event": "^14.4.3",
    "govuk-frontend": "^5.13.0"
  },
  "jest": {
    "clearMocks": true,
    "globals": {},
    "moduleFileExtensions": [
      "js"
    ],
    "moduleDirectories": [
      "node_modules",
      "src"
    ],
    "resetMocks": true,
    "restoreMocks": true,
    "testEnvironment": "jsdom",
    "testRegex": "\\.test\\.js$",
    "transform": {
      "^.+\\.js$": "babel-jest"
    },
    "transformIgnorePatterns": [
      "/node_modules/*.+\\.js$"
    ]
  },
  "standard": {
    "globals": [
      "Event",
      "InputEvent",
      "fetch"
    ],
    "env": [
      "jest"
    ]
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "targets": "defaults"
        }
      ]
    ],
    "plugins": [
      "@babel/plugin-proposal-class-properties",
      "@babel/plugin-transform-classes"
    ]
  }
}
