{
  "name": "govuk_digideps",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "build": "webpack",
    "lint": "standard",
    "test": "jest assets/javascripts/__tests__"
  },
  "devDependencies": {
    "@babel/core": "^7.12.3",
    "@babel/eslint-parser": "^7.12.16",
    "@babel/plugin-proposal-class-properties": "^7.12.13",
    "@babel/preset-env": "^7.12.1",
    "@jest/globals": "^26.6.2",
    "babel-jest": "^26.6.3",
    "babel-loader": "^8.1.0",
    "copy-webpack-plugin": "^6.4.1",
    "css-loader": "^6.5.1",
    "del": "^6.0.0",
    "govuk-elements-sass": "^3.1.0",
    "jest": "^27.4.3",
    "jest-fetch-mock": "^3.0.3",
    "jquery": "^3.5.1",
    "mini-css-extract-plugin": "^2.2.0",
    "sass": "^1.44.0",
    "sass-loader": "^10.2.0",
    "standard": "^16.0.4",
    "stickyfilljs": "^2.1.0",
    "url-loader": "^3.0.0",
    "webpack": "^5.50.0",
    "webpack-cli": "^4.7.2"
  },
  "dependencies": {
    "@ministryofjustice/frontend": "0.0.17-alpha",
    "govuk-frontend": "^3.14.0"
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "targets": "defaults"
        }
      ]
    ],
    "plugins": [
      "@babel/plugin-proposal-class-properties",
      "@babel/plugin-transform-classes"
    ]
  },
  "jest": {
    "clearMocks": true,
    "globals": {},
    "moduleFileExtensions": [
      "js"
    ],
    "moduleDirectories": [
      "node_modules",
      "src"
    ],
    "resetMocks": true,
    "restoreMocks": true,
    "testEnvironment": "jsdom",
    "testRegex": "\\.test\\.js$",
    "transform": {
      "^.+\\.js$": "babel-jest"
    },
    "transformIgnorePatterns": [
      "/node_modules/*.+\\.js$"
    ]
  },
  "standard": {
    "env": [
      "jest"
    ],
    "parser": "@babel/eslint-parser"
  }
}
