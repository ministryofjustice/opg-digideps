                {% if 'settings' in section and section != 'settings' %}
                    <li class="govuk-breadcrumbs__list-item">
                        <a href="{{ path('org_settings') }}" class="govuk-breadcrumbs__link">
                            Settings
                        </a>
                    </li>
                {% endif %}
