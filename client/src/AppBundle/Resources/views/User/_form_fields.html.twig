{% set translationDomain = "settings" %}

{% if client_validated %}
    <h3 class="govuk-heading-m">{{ 'form.editYourDetails.detailsEntered' | trans({}, translationDomain) }}</h3>
{% endif %}

{% if form.firstname is defined and client_validated %}
    {{ form_widget(form.firstname, {'type': 'hidden'}) }}
    <p class="flush--bottom">
        <strong class="govuk-!-font-weight-bold">{{ 'form.editYourDetails.controls.firstname.label' | trans({}, translationDomain) }}: </strong>
        {{ user.firstName }}
    </p>
{%  endif %}

{% if form.lastname is defined and client_validated %}
    {{ form_widget(form.lastname, {'type': 'hidden'}) }}
    <p class="flush--bottom">
        <strong class="govuk-!-font-weight-bold">{{ 'form.editYourDetails.controls.lastname.label' | trans({}, translationDomain) }}: </strong>
        {{ user.lastname }}
    </p>
{% endif %}

{% if form.address1 is defined and form.addressPostcode is defined and client_validated %}
    {{ form_widget(form.addressPostcode, {'type': 'hidden'}) }}
    <p class="flush--bottom">
        <strong class="govuk-!-font-weight-bold">{{ 'form.editYourDetails.controls.addressPostcode.label' | trans({}, translationDomain) }}: </strong>
        {{ user.addressPostcode }}
    </p>
{% endif %}

{% if form.email is defined and client_validated %}
    {{ form_widget(form.email, {'type': 'hidden'}) }}
    <p class="push--bottom">
        <strong class="govuk-!-font-weight-bold">{{ 'form.editYourDetails.controls.email.label' | trans({}, translationDomain) }}: </strong>
        {{ user.email }}
    </p>
{% endif %}

{% if client_validated %}
    <h3 class="govuk-heading-m">{{ 'form.editYourDetails.furtherDetailsNeeded' | trans({}, translationDomain) }}</h3>
{% endif %}

{% if form.firstname is defined %}
    {% if user.firstName is empty or not client_validated %}
        {{ form_input(form.firstname, 'form.editYourDetails.controls.firstname') }}
    {% endif %}
{%  endif %}

{% if form.lastname is defined %}
    {% if user.lastname is empty or not client_validated %}
        {{ form_input(form.lastname, 'form.editYourDetails.controls.lastname') }}
    {% endif %}
{% endif %}

{% if form.jobTitle is defined %}
    {{ form_input( form.jobTitle, 'form.editYourDetails.controls.jobTitle') }}
{% endif %}

{% if form.address1 is defined %}
    {{ form_input( form.address1, 'form.editYourDetails.controls.address1') }}<span class="govuk-visually-hidden">{{ 'form.editYourDetails.controls.address1.context' | trans({}, translationDomain) }}</span>

    {{ form_input( form.address2, 'form.editYourDetails.controls.address2') }}<span class="govuk-visually-hidden">{{ 'form.editYourDetails.controls.address2.context' | trans({}, translationDomain) }}</span>

    {{ form_input( form.address3, 'form.editYourDetails.controls.address3') }}<span class="govuk-visually-hidden">{{ 'form.editYourDetails.controls.address3.context' | trans({}, translationDomain) }}</span>

    {% if form.addressPostcode is defined %}
        {% if user.addressPostcode is empty or not client_validated %}
            {{ form_input(form.addressPostcode, 'form.editYourDetails.controls.addressPostcode', { 'inputClass': 'govuk-!-width-one-quarter' }) }}
        {% endif %}
    {% endif %}

    {{ form_select( form.addressCountry, 'form.editYourDetails.controls.addressCountry') }}
{% endif %}

{% if form.phoneMain is defined %}
    {{ form_input( form.phoneMain,'form.editYourDetails.controls.phoneMain') }}
{% endif %}

{% if form.phoneAlternative is defined %}
    {{ form_input( form.phoneAlternative, 'form.editYourDetails.controls.phoneAlternative') }}
{% endif %}


{% if form.email is defined %}
    {% if user.email is empty or not client_validated %}
        {{ form_input(form.email, 'form.editYourDetails.controls.email') }}
    {% endif %}
{% endif %}

{% if form.removeAdmin is defined %}
    <h3 class="govuk-heading-m">{{ 'form.editYourDetails.controls.removeAdmin.title' | trans({}, translationDomain) }}</h3>
    {{ form_checkbox( form.removeAdmin, 'form.editYourDetails.controls.removeAdmin' ) }}
{% endif %}
