{% extends 'AppBundle:Layouts:application.html.twig' %}

{% from 'AppBundle:Macros:macros.html.twig' import details %}

{% set translationDomain = "admin-checklist" %}
{% trans_default_domain translationDomain %}

{% set page = 'checklistPage' %}
{% set transOptions = {'%client%': report.client.firstname | e } %}
{% set append104 = report.get104TransSuffix %}

{% block htmlTitle %}{{ (page ~ '.htmlTitle') | trans }}{% endblock %}
{% block pageTitle %}{{ (page ~ '.pageTitle') | trans }}{% endblock %}
{% block supportTitleTop %}{{ (page ~ '.supportTitle') | trans }}{% endblock %}

{% block pageContent %}
    <dl class="govuk-summary-list govuk-summary-list--no-border">
        <div class="govuk-summary-list__row">
            <dt class="govuk-summary-list__key">
                {{ 'client' | trans({}, 'common') }}:
            </dt>
            <dd class="govuk-summary-list__value behat-region-fullName">
                {{ report.client.fullName }}
            </dd>
        </div>
        <div class="govuk-summary-list__row">
            <dt class="govuk-summary-list__key">
                {{ 'courtOrderNumber' | trans({}, 'common') }}:
            </dt>
            <dd class="govuk-summary-list__value behat-region-case-number">
                {{ report.client.caseNumber }}
            </dd>
        </div>
        <div class="govuk-summary-list__row">
            <dt class="govuk-summary-list__key">
                {{ 'reportType' | trans({}, 'common') }}:
            </dt>
            <dd class="govuk-summary-list__value behat-region-report-type-title">
                {{ ('reportTitles.' ~ report.reportTitle) | trans({}, 'report') }}
            </dd>
        </div>
        {% if report.client.deletedAt %}
            <div class="govuk-summary-list__row">
                <dt class="govuk-summary-list__key">
                    {{ 'dischargedOn' | trans({}, 'common') }}:
                </dt>
                <dd class="govuk-summary-list__value behat-region-discharged-on">
                    {{ report.client.deletedAt | date("j M Y") }}
                </dd>
            </div>
        {% endif %}
    </dl>

    <a name="anchor-lodging-checklist"></a>
    <hr class="govuk-section-break govuk-section-break--m govuk-section-break--visible">
    <h2 class="govuk-heading-l">{{ 'checklistPage.heading.lodgingChecklist' | trans }}</h2>
    <hr class="govuk-section-break govuk-section-break--xl govuk-!-margin-top-1 govuk-section-break--visible">

    <div class="govuk-grid-row">
        <div class="govuk-grid-column-two-thirds">
            {# Attached documents #}
            {% if report.deputyDocuments is defined and (report.deputyDocuments is not empty) %}
                {% set contents %}
                    <table>
                        <thead>
                            <th>{{ 'summaryPage.filename' | trans({}, 'report-documents') }}</th>
                            <th class="text--right">{{ 'summaryPage.dateAttached' | trans({}, 'report-documents') }}</th>
                        </thead>
                        <tbody>
                            {% for document in report.deputyDocuments %}
                                <tr>
                                    <td>{{ document.fileName }}</td>
                                    <td class="numeric-small">{{ document.createdOn | date("j F Y H:i") }}</td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                {% endset %}

                {{ details({
                    summaryText: 'Attached documents',
                    text: contents,
                }) }}
            {% endif %}

            {{ form_start(form, {attr: {novalidate: 'novalidate', id: 'create-report-checklist-form' }}) }}

            {# Deputy and client information #}
            {% include 'AppBundle:Admin/Client/Report/partials:_deputy-and-client-info.html.twig' %}

            {# Decisions made over the reporting period #}
            {% include 'AppBundle:Admin/Client/Report/partials:_decisions-made.html.twig' %}

            {# People consulted #}
            {% include 'AppBundle:Admin/Client/Report/partials:_people-consulted.html.twig' %}

            {# Contact with client, care arrangements and care plan #}
            {% include 'AppBundle:Admin/Client/Report/partials:_contact-with-client.html.twig' %}

            {# Health & Lifestyle #}
            {% if form.satisfiedWithHealthAndLifestyle is defined %}
                {% include 'AppBundle:Admin/Client/Report/partials:_health-and-lifestyle.html.twig' %}
            {% endif %}

            {# Assets and debts #}
            {% if form.assetsDeclaredAndManaged is defined %}
                {% include 'AppBundle:Admin/Client/Report/partials:_assets-and-debts.html.twig' %}
            {% endif %}

            {# Money transfers, Money in and money out #}
            {% if form.openClosingBalancesMatch is defined %}
                {% include 'AppBundle:Admin/Client/Report/partials:_money-in-and-out.html.twig' %}
            {% endif %}

            {#Â PA fees and expenses #}
            {% if form.satisfiedWithPaExpenses is defined %}
                {% include 'AppBundle:Admin/Client/Report/partials:_pa-fee-expenses.html.twig' %}
            {% endif %}

            {# Bonds #}
            {% if form.bondAdequate is defined %}
                {% include 'AppBundle:Admin/Client/Report/partials:_bonds.html.twig' %}
            {% endif %}

            {# Deputy costs #}
            {% if form.paymentsMatchCostCertificate is defined %}
                {% include 'AppBundle:Admin/Client/Report/partials:_prof-deputy-costs.html.twig' %}
            {% endif %}

            {# Deputy costs estimates #}
            {% if form.nextBillingEstimatesSatisfactory is defined %}
                {% include 'AppBundle:Admin/Client/Report/partials:_prof-deputy-costs-estimate.html.twig' %}
            {% endif %}

            {# Next reporting period #}
            {% include 'AppBundle:Admin/Client/Report/partials:_next-reporting-period.html.twig' %}

            {# Declaration #}
            {% include 'AppBundle:Admin/Client/Report/partials:_declaration.html.twig' %}

            <a name="anchor-lodging-summary"></a>
            {{ form_input(form.lodgingSummary, (page ~ '.form.lodgingSummary'), {
                formGroupClass: 'js-auto-size',
                labelClass: 'govuk-label--m',
                inputClass: 'govuk-!-width-full',
                hasHintList: true,
            }) }}

            {{ form_checkbox_group(form.finalDecision, (page ~ '.form.finalDecision'), {
                classes: 'govuk-radios--small',
                legendClass: 'govuk-fieldset__legend--m',
            }) }}

            <a name="anchor-further-information"></a>
            {{ form_input(form.furtherInformationReceived, (page ~ '.form.furtherInformation'), {
                formGroupClass: 'js-auto-size',
                labelClass: 'govuk-label--m',
                inputClass: 'govuk-!-width-full',
            }) }}

            {% set contents %}
                <table class="govuk-table">
                    <thead class="govuk-table__head">
                        <tr class="govuk-table__row govuk-body-s">
                            <th class="govuk-table__header" scope="col">{{ 'date' | trans({}, 'common') }}</th>
                            <th class="govuk-table__header" scope="col">{{ 'savedBy' | trans({}, 'common') }}</th>
                            <th class="govuk-table__header" scope="col">{{ (page ~ '.furtherInfo.infoProvided') | trans }}</th>
                        </tr>
                    </thead>
                    <tbody class="govuk-table__body">
                    {% if checklist.checklistInformation is not empty %}
                        {% set counter = 1 %}
                        {% for info in checklist.checklistInformation %}
                            <tr class="govuk-table__row govuk-body-s">
                                <td class="govuk-table__cell behat-region-created-on-{{ counter }} numeric no-wrap align--top">{{ info.createdOn | date("j F Y") }}</td>
                                <td class="govuk-table__cell behat-region-information-created-by-{{ counter }} align--top">{{ info.createdBy.fullname }}, {{ info.createdBy.roleFullName }}</td>
                                <td class="govuk-table__cell behat-region-information-{{ counter }}">{{ info.information | nl2br | raw }}</td>
                            </tr>
                            {% set counter = counter + 1 %}
                        {% endfor %}
                    {% else %}
                        <tr class="govuk-table__row govuk-body-s">
                            <td colspan="3" class="govuk-table__cell">{{ (page ~ '.furtherInfo.noInfoReceived') | trans }}</td>
                        </tr>
                    {% endif %}
                    </tbody>
                </table>
            {% endset %}

            {{ details({
                summaryText: (page ~ '.furtherInfo.history') | trans({ '%count%': checklist.checklistInformation | length }),
                text: contents,
            }) }}

            {{ form_submit(form.saveFurtherInformation, (page ~ '.form.saveFurtherInformation'), {
                buttonClass: 'govuk-button--secondary behat-link-save-further-information'
            }) }}

            <hr class="govuk-section-break govuk-section-break--m govuk-section-break--visible">

            {{ form_submit(form.save, (page ~ '.form.save'), {
                buttonClass: 'govuk-button--secondary behat-link-save-progress'
            }) }}

            {{ form_submit(form.submitAndDownload, (page ~ '.form.submitAndDownload'), {
                buttonClass: 'behat-link-submit-and-download'
            }) }}

            {{ form_end(form) }}
        </div>
        <div class="govuk-grid-column-one-third">
            {% include 'AppBundle:Admin/Client/Report/partials:_checklistSidebar.html.twig' %}
        </div>
    </div>

{% endblock %}
