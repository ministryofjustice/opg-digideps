        {% if report.hasSection('profDeputyCostsEstimate') %}
        <div class="section">
            <h2 class="section-heading">{{ (page ~ '.heading.lodging.profDeputyCostsEstimate') | trans({}, 'admin-checklist') }}</h2>

            <h3 class="label question bold">{{ (page ~ '.form.nextBillingEstimatesSatisfactory.label') | trans({}, 'admin-checklist') }}</h3>

