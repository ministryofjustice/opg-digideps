        <div class="section">
            <h2 class="section-heading">{{ (page ~ '.heading.lodging.summary') | trans({}, 'admin-checklist') }}</h2>

            <div class="labelvalue push-half--top">
                <h3 class="label question bold">{{ (page ~ '.form.lodgingSummary.label') | trans({}, 'admin-checklist') }}</h3>
                <div class="value">{{ lodgingChecklist.lodgingSummary | nl2br }}</div>
