{% set translationDomain = "common" %}
{% trans_default_domain translationDomain %}

<hr class="govuk-section-break govuk-section-break--m govuk-section-break--visible">
<details class="govuk-details behat-region-contact-details" data-module="govuk-details">
    <summary class="govuk-details__summary">
    <span class="govuk-details__summary-text">
      {{ 'contactDetailsTitle' | trans }}
    </span>
    </summary>
    <div class="govuk-details__text">
        <ul class="govuk-list">
            <li> {{ 'helplineTitle' | trans }}</li>
            <li>
                {% if not app.user %}
                    {{ 'helplineGeneral' | trans }}
                {% elseif app.user and app.user.isDeputyPA() %}
                    {{ 'helplinePA' | trans }}
                {% elseif app.user and app.user.isDeputyProf() %}
                    {{ 'helplineProf' | trans }}
                {% else %}
                    {{ 'helpline' | trans }}
                {% endif %}
            </li>
        </ul>
        <ul class="govuk-list">
            <li>{{ 'emailTitle' | trans }}</li>
            <li>
                {% if not app.user %}
                    <a href="mailto:{{ 'layDeputySupportEmail' | trans }}" title="{{ 'layDeputySupportEmail' | trans }}">{{ 'layDeputySupportEmail' | trans }}</a>
                {% elseif app.user and app.user.isDeputyPA() %}
                    <a href="mailto:{{ 'paSupportEmail' | trans }}" title="{{ 'paSupportEmail' | trans }}">{{ 'paSupportEmail' | trans }}</a>
                {% elseif app.user and app.user.isDeputyProf() %}
                    <a href="mailto:{{ 'profSupportEmail' | trans }}" title="{{ 'profSupportEmail' | trans }}">{{ 'profSupportEmail' | trans }}</a>
                {% else %}
                    <a href="mailto:{{ 'layDeputySupportEmail' | trans }}" title="{{ 'layDeputySupportEmail' | trans }}">{{ 'layDeputySupportEmail' | trans }}</a>
                {% endif %}
            </li>
        </ul>
        <ul class="govuk-list">
            <li>{{ 'openingHoursTitle' | trans }}</li>
            <li>{{ 'openingHoursText' | trans }}</li>
        </ul>
    </div>
</details>
