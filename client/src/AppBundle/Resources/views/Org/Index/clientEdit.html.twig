{% extends 'AppBundle:Layouts:application.html.twig' %}

{% import 'AppBundle:Macros:macros.html.twig' as macros %}

{% set translationDomain = "org-client-edit" %}
{% trans_default_domain translationDomain %}
{% set translationPrefix = "form." %}

{% block htmlTitle %}{{ 'htmlTitle' | trans }}{% endblock %}
{% block pageTitle %}{{ 'pageTitle' | trans }}{% endblock %}


{% block supportTitleTop %}
    <span class="heading-secondary">
        {{ 'supportTitle' | trans({'%fullName%': client.fullname | title }) }}
    </span>
{% endblock %}

{% block breadcrumbs %}
    {{ macros.breadcrumbs(client.currentReport) }}
{% endblock %}

{% block pageContent %}

    {{ form_start(form, {attr: {novalidate: 'novalidate'} }) }}

    {{ form_input(form.firstname, 'form.firstname') }}
    {{ form_input(form.lastname, 'form.lastname') }}

    {{ form_known_date(form.dateOfBirth, 'form.dateOfBirth') }}

    <fieldset>
        <legend class="govuk-heading-m">{{ 'form.contactHeading' | trans }}</legend>
        {{ form_input(form.phone, 'form.phone') }}
        {{ form_input(form.email, 'form.email') }}
        {{ macros.addressFields(form, translationDomain, translationPrefix) }}
        {{ form_widget(form.id) }}
        {#{{ form_select(form.country, 'country') }}#}
    </fieldset>

    {{ form_submit(form.save, 'form.save') }}

    <a href="{{ backLink }}" class="govuk-link button-link">{{ 'cancel' | trans({}, 'common') }}</a>

    {{ form_end(form) }}

{% endblock %}
