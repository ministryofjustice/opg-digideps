{% import 'AppBundle:Macros:macros.html.twig' as macros %}

{% set translationDomain = "report-money-short" %}
{% trans_default_domain translationDomain %}
{% set transOptions = {'%client%': report.client.firstname | e } %}

{% set hideEditLink = hideEditLink | default(false) %}

<table class="check-your-answers columns-2 push-double--bottom">
    {{ macros.summaryTableHeaderQA(hideEditLink) }}
    <tbody>
    <tr class="behat-region-categories">
        <td>
            {{ 'form.categoriesOut.label' | trans(transOptions) }}
        </td>
        <td>
            {% set categories = report.moneyShortcategoriesOutPresent %}
            {% if categories | length == 0 %}
                None
            {% else %}
                <ul class="list list-bullet flush--ends">
                    {% for c in categories %}
                        <li>
                            {{ ('form.categoriesEntries.' ~ c.typeId ~ '.label') | trans(transOptions) }}
                        </li>
                    {% endfor %}
                </ul>
            {% endif %}
        </td>
        {% if not hideEditLink  %}
            <td class="change-answer">
                <a href="{{ path('money_out_short_category', { 'reportId': report.id, 'from': 'summary' }) }}"
                   class="behat-link-edit">{{ 'edit' | trans({}, 'common') }}</a>
            </td>
        {% endif %}
    </tr>

    </tbody>
</table>


<table class="check-your-answers columns-2 push-double--bottom">
    {{ macros.summaryTableHeaderQA(hideEditLink) }}
    <tbody>
    <tr class="behat-region-records-exist">
        {% if report.moneyTransactionsShortOutExist is null or (report.moneyTransactionsShortOutExist == "yes" and report.moneyTransactionsShortOut | length == 0) %}
            <td>
                <span class="error">
                    {{ 'existPage.form.moneyTransactionsShortOutExist.label' | trans(transOptions) }}
                </span>
            </td>
            <td>
                <span class="error-message">{{ 'pleaseAnswer' | trans({}, 'common' ) }}</span>
            </td>
        {% else %}
            <td>
                {{ 'existPage.form.moneyTransactionsShortOutExist.label' | trans(transOptions) }}
            </td>
            <td>
                {{ report.moneyTransactionsShortOutExist | capitalize }}
            </td>
        {% endif %}
        {% if not hideEditLink  %}
            <td class="change-answer">
                <a href="{{ path('money_out_short_exist', { 'reportId': report.id, 'from': 'summary' }) }}"
                   class="behat-link-edit">{{ 'edit' | trans({}, 'common') }}</a>
            </td>
        {% endif %}
    </tr>
    </tbody>
</table>


{% if report.moneyTransactionsShortOut | length > 0 %}
    <div class="grid-row">
        <div class="column-half">
            <h2 class="heading-medium flush--ends">List of expenses over £1000</h2>
        </div>
        {% if not hideEditLink  %}
            <div class="column-half text--right">
                <a href="{{ path('money_out_short_add', { 'reportId': report.id, 'from': 'summary'}) }}"
                   class="bold-small move-quarter--up action-link behat-link-add">
                    <span class="icon icon-plus"></span>
                    {{ 'summaryPage.moneyOut.addButton' | trans }}
                </a>
            </div>
        {% endif %}
    </div>
{% endif %}

{% if report.moneyTransactionsShortOut | length > 0 %}
    <table class="check-your-answers columns-3">
        <thead>
        <tr>
            <th>Description</th>
            <th class="numeric">Date</th>
            <th class="numeric">Amount</th>
            {% if not hideEditLink  %}
                <th>
                    <span class="visually-hidden">{{ 'actions' | trans({}, 'common') }}</span>
                </th>
            {% endif %}
        </tr>
        </thead>
        <tbody>
        {% for tr in report.moneyTransactionsShortOut %}
            <tr class="behat-region-transaction-{{ tr.description | behat_namify }}">
                <td>
                    {{ tr.description }}<br/>
                </td>
                <td class="numeric-small">
                    {{ tr.date ? tr.date | date("j F Y")  : '-' }}
                </td>
                <td class="numeric-small">
                    £{{ tr.amount | money_format }}
                </td>
                {% if not hideEditLink  %}
                    <td class="change-answer width-sixth soft-half--left hard--right">
                        <a href="{{ path('money_out_short_edit', { 'reportId': report.id, 'transactionId': tr.id }) }}"
                           class="behat-link-edit action-link">{{ 'edit' | trans({}, 'common') }}</a>
                        <a href="{{ path('money_out_short_delete', { 'reportId': report.id, 'transactionId': tr.id }) }}"
                           class="push-half--left action-link behat-link-delete">{{ 'remove' | trans({}, 'common' ) }}</a>
                    </td>
                {% endif %}
            </tr>
        {% endfor %}
        <tr class="no-border">
            <td>
                <span class="bold-small">Total money out</span>
            </td>
            <td></td>
            <td class="numeric-small">
                <span class="bold-small behat-region-transaction-total">£{{ report.totalValue(report.moneyTransactionsShortOut) | money_format }}</span>
            </td>
            {% if not hideEditLink  %}
                <td></td>
            {% endif %}
        </tr>
        </tbody>
    </table>

{% endif %}

