<div class="section">
    <h2 class="section-heading">Mental capacity</h2>

    <div class="box">
        {% set reportType = ('-4' == report.get104TransSuffix) ? 'financial or health and welfare' : ('104' in report.type) ? 'health and welfare' : 'financial'  %}
        <h3 class="label question bold">Has {{ client.firstName }}'s mental capacity to make {{ reportType }} decisions changed?</h3>

        <table class="checkboxes labelvalue inline">
            <tr>
                <td class="checkbox value">{% if mentalCapacity.hasCapacityChanged == 'changed' %}X{% else %}&nbsp;{% endif %}</td>
                <td class="label">Changed</td>
                <td class="checkbox value">{% if mentalCapacity.hasCapacityChanged == 'stayedSame' %}X{% else %}&nbsp;{% endif %}</td>
                <td class="label">Stayed the same</td>
            </tr>
        </table>

        {% if mentalCapacity.hasCapacityChanged == 'changed' %}
            <div class="labelvalue push-half--top">
                <div class="value">{{ mentalCapacity.hasCapacityChangedDetails | nl2br }}</div>
            </div>
        {% endif %}

        <div class="labelvalue push-half--top">
            <h3 class="label question bold">When was {{ client.firstName }}'s mental capacity to make decisions last assessed by a professional (such as a psychiatrist or social worker)? </h3>
            <div class="value">
                {{ mentalCapacity.mentalAssessmentDate ? mentalCapacity.mentalAssessmentDate  | date("m/Y") : 'n.a.' }}
            </div>
        </div>
    </div>
</div>
