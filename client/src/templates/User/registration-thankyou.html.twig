{% extends 'App:Layouts:application.html.twig' %}

{% trans_default_domain "register" %}

{% block htmlTitle %}{{ 'htmlTitle' | trans }}{% endblock %}
{% block pageTitle %}{{ 'pageTitle' | trans }}{% endblock %}
{% set transOptions = {
    '%email%': email,
    '%link%': path('login')
} %}

{% block pageContent %}

    <h2 class="govuk-heading-m flush--top">{{ 'thankyou.subheading' | trans }}</h2>

    <div class="text">

        <p class="govuk-body">{{ 'thankyou.pageDescription1' | trans(transOptions) | raw }}</p>
        <p class="govuk-body">{{ 'thankyou.pageDescription2' | trans(transOptions) | raw }}</p>
        <p class="govuk-body">{{ 'thankyou.pageDescription3' | trans(transOptions) | raw }}</p>
        <p class="govuk-body">{{ 'thankyou.pageDescription4' | trans(transOptions) | raw }}</p>
    </div>

{% endblock %}
