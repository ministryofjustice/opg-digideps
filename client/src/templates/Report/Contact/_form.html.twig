{% import 'App:Macros:macros.html.twig' as macros %}

{% set translationDomain = "report-contacts" %}
{% trans_default_domain translationDomain %}
{% set translationPrefix = "form." %}

{% set transOptions = {'%client%': report.client.firstname | e } %}

{{ form_start(form, {attr: {novalidate: 'novalidate'} }) }}

    {{ form_input(form.contactName, 'form.contactName') }}
    {{ form_input(form.relationship, 'form.relationship', {
        'labelText': 'form.relationship.label' | trans(transOptions, translationDomain)
    }) }}
    {{ form_input(form.explanation, 'form.explanation') }}
    {{ macros.addressFields(form, translationDomain, translationPrefix) }}

    {{ macros.saveAndContinueButton(form.save) }}

{{ form_end(form) }}
