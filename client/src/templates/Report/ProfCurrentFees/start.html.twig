{% extends 'App:Layouts:application.html.twig'%}

{% import 'App:Macros:macros.html.twig' as macros %}

{% set translationDomain = "report-prof-current-fees" %}
{% trans_default_domain translationDomain %}
{% set page = 'startPage' %}

{% block htmlTitle %}{{ (page ~ '.htmlTitle') | trans }}{% endblock %}
{% block pageTitle %}{{ (page ~ '.pageTitle') | trans }}{% endblock %}


{% block breadcrumbs %}{{ macros.breadcrumbs(report) }}{% endblock %}

{% block pageContent %}

    <div class="text behat-region-start-page">
        <p class="govuk-body">{{ (page ~ '.pageSectionDescription1') | trans }}</p>
        <ul class="govuk-list govuk-list--bullet">
        	<li>{{ (page ~ '.listItem01') | trans }}</li>
        	<li>{{ (page ~ '.listItem02') | trans }}</li>
        </ul>
        <p class="govuk-body">{{ (page ~ '.pageSectionDescription2') | trans }}</p>
    </div>

    {{ macros.startSectionButton(path('prof_current_fees_exist', { 'reportId': report.id}), (page ~ '.startButton') | trans ) }}

    {# Pagination #}
    {% include 'App:Report:_nextprevious.html.twig' with {
        'report': report,
        'sectionId': 'profCurrentFees',
    } %}

{% endblock %}
