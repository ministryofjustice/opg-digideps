{% set gaLabel = 'Clicked submit button on ' ~ app.request.requesturi %}

{{ form_start(form, {attr: {novalidate: 'novalidate' } }) }}

    {{ radio_group(form.deputyshipLength) }}

    {{ checkbox_group(form.agreedResearchTypes) }}

    {{ radio_group(form.hasAccessToVideoCallDevice) }}

