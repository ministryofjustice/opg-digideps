{% set translationDomain = "report-client-benefits-check" %}
{% trans_default_domain translationDomain %}

{% set transOptions = {
    '%client%': report.client.firstname | e,
} %}

<div class="section break-before" id="client-benefits-check-section">
    <h2 class="section-heading">{{ 'common.pageTitle' | trans(transOptions) }}</h2>

    <div class="box">

        <div class="labelvalue push-half--top">
            <h3 class="label question bold">{{ 'stepPage.pageTitle.1.mainTitle' | trans(transOptions) }}</h3>
            <div class="value">
                {{ clientBenefitsCheck.dateLastCheckedEntitlement ? clientBenefitsCheck.dateLastCheckedEntitlement  | date("m/Y") : clientBenefitsCheck.whenLastCheckedEntitlement }}
            </div>

            {% if clientBenefitsCheck.whenLastCheckedEntitlement == 'neverChecked' %}
                <div class="labelvalue push--top">
                    <div class="label">{{ 'reportReview.neverCheckedEntitlementTitle' | trans(transOptions)}}</div>
                    <div class="value">{{ clientBenefitsCheck.neverCheckedExplanation | nl2br }}</div>
                </div>
            {% endif %}
        </div>
    </div>

    <div class="box">
        <div class="labelvalue push-half--top">
            <h3 class="label question bold">{{ 'stepPage.pageTitle.2.mainTitle' | trans(transOptions) }}</h3>

            <table class="checkboxes labelvalue inline">
                <tr>
                    <td class="value checkbox"{% if clientBenefitsCheck.doOthersReceiveIncomeOnClientsBehalf == 'yes' %} aria-label=”Selected”>X{% else %}>&nbsp;{% endif %}</td>
                    <td class="label">{{ 'yes' | trans({}, 'common' ) }}</td>
                    <td class="value checkbox"{% if clientBenefitsCheck.doOthersReceiveIncomeOnClientsBehalf == 'no' %} aria-label=”Selected”>X{% else %}>&nbsp;{% endif %}</td>
                    <td class="label">{{ 'no' | trans({}, 'common' ) }}</td>
                    <td class="value checkbox"{% if clientBenefitsCheck.doOthersReceiveIncomeOnClientsBehalf == 'dontKnow' %} aria-label=”Selected”>X{% else %}>&nbsp;{% endif %}</td>
                    <td class="label">{{ 'dontKnow' | trans({}, 'common' ) }}</td>
                </tr>
            </table>

            {% if clientBenefitsCheck.doOthersReceiveIncomeOnClientsBehalf == 'yes' %}
                <table class="labelvalue money push--top">
                    {% for income in clientBenefitsCheck.typesOfIncomeReceivedOnClientsBehalf %}
                        <tr>
                            <td class="label noborder">{{ income.incomeType }}</td>
                            <td class="value text--right width-fifth">
                                {% if income.amount is null %} {{ 'form.incomeDetails.dontKnowCheckboxLabel' | trans(transOptions) }} {% else %}&pound;{{ income.amount | money_format }}&nbsp;{% endif %}
                            </td>
                        </tr>
                    {% endfor %}
                </table>
            {% endif %}

            {% if clientBenefitsCheck.doOthersReceiveIncomeOnClientsBehalf == 'dontKnow' %}
                <div class="labelvalue push--top">
                    <div class="label">{{ 'reportReview.dontKnowIncomeTitle' | trans(transOptions)}}</div>
                    <div class="value">{{ clientBenefitsCheck.dontKnowIncomeExplanation | nl2br }}</div>
                </div>
            {% endif %}
        </div>
    </div>
</div>
