{% extends '@App/Layouts/application.html.twig'%}
{% set translationDomain = "password-sent" %}
{% trans_default_domain translationDomain %}

{% block htmlTitle %}{{ 'page.htmlTitle' | trans }}{% endblock %}
{% block pageTitle %}{{ 'pageTitle' | trans }}{% endblock %}

{% block pageContent %}

  	<div class="text">

		<p class="govuk-body">{{ 'subtitle' | trans()}}</p>

		<p class="govuk-body">{{ 'didnotReceive' | trans() }} <a href="{{ path('password_forgotten') }}">{{ 'returnToResetPassword' | trans }}</a></p>

		<p class="govuk-body">
			{{ 'stillHavingProblems' | trans() }}
			<a href="https://www.gov.uk/government/organisations/office-of-the-public-guardian#org-contacts">{{ 'contactOPG' | trans }}</a>
		</p>

		<a href="{{ path('login') }}" class="behat-link-return-to-login">{{ 'returnToSignIn' | trans }}</a>

  	</div>


{% endblock %}
