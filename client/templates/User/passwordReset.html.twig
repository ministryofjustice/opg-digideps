{% extends '@App/Layouts/application.html.twig'%}

{% set translationDomain = "password-reset" %}
{% trans_default_domain translationDomain %}

{% block htmlTitle %}{{ 'page.htmlTitle' | trans }}{% endblock %}
{% block pageTitle %}{{ 'pageTitle' | trans }}{% endblock %}

{% block pageContent %}

  <p class="govuk-body">{{ 'subtitle' | trans }}</p>

  {{ form_start(form, {attr: {novalidate: 'novalidate' }}) }}

  {{ form_input(form.password.first, 'form.password', {'dataModule': 'moj-password-reveal' , 'hasHintList': true }) }}
  {{ form_input(form.password.second, 'form.password_confirm', {'dataModule': 'moj-password-reveal' }) }}
  <div style="clear:both;display:inline-block;height:0px;" data-module="opg-toggleable-submit">
  {{ form_submit(form.save, 'form.submit', {'buttonClass': 'behat-link-save'}) }}
  </div>

  {{ form_end(form) }}

{% endblock %}
