# EditorConfig is awesome: http://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = false
indent_style = space
indent_size = 4
charset = utf-8

[*.{scss}]
indent_style = space
indent_size = 2
charset = utf-8

[*.{yml}]
indent_style = space
indent_size = 2
charset = utf-8
