{% trans_default_domain translationDomain %}

<div itemscope itemtype="http://schema.org/Person" class="item client-details">
    
    <a href="{{ path('client_home', {'action': 'edit' })~'#edit-client' }}"
       class="edit-button behat-link-edit-client-details">{{ 'clientDetails.edit'| trans({'%client%': client.firstname}, translationDomain) }}</a>
    
    <dl class="item-data item-data-fixed">
        <dt class="item-label">{{ 'clientDetails.caseReference' | trans }}</dt>
        <dd class="item-value behat-region-case-number">{{ client.getCaseNumber }}</dd>

        <dt class="item-label">{{ 'clientDetails.address' | trans }}</dt>
        <dd class="item-value" itemprop="address" itemscope itemtype="http://schema.org/PostalAddress">
            {% if client.address is not empty %}
                <div itemprop="streetAddress" class="behat-region-client-address">{{ client.address }}</div>
            {% endif %}
            {% if client.address2 is not empty %}
                <div itemprop="addressLocality">{{ client.address2 }}</div>
            {% endif %}
            {% if client.county is not empty %}
                <div itemprop="addressRegion">{{ client.county }}</div>
            {% endif %}
            {% if client.postcode is not empty %}
                <div itemprop="postalCode">{{ client.postcode }}</div>
            {% endif %}
            {% if client.country is not empty %}
                <div itemprop="addressCountry">{{ client.country | country_name }}</div>
            {% endif %}
        </dd>
    </dl>
</div>
