{% set translationDomain = "ndr-deputy-expenses" %}
{% trans_default_domain translationDomain %}

<table class="check-your-answers columns-2 push-double--bottom">
    <thead>
        <tr>
            <th>Question</th>
            <th>Answer</th>
            <th>
                <span class="visually-hidden">Actions</span>
            </th>
        </tr>
    </thead>
    <tbody>
        <tr class="behat-region-paid-for-anything">
            <td>
                {{ 'existPage.form.paidForAnything.label' | trans(transOptions)  }}
            </td>
            <td>
                {{ ndr.paidForAnything | capitalize }}
            </td>
            <td class="change-answer">
                <a href="{{ path('ndr_deputy_expenses_exist', { 'ndrId': ndr.id, 'from': 'summary' }) }}" class="behat-link-edit">{{ 'summaryPage.edit'| trans }}</a>
            </td>
        </tr>
    </tbody>
</table>

{% if ndr.expenses | length > 0 %}
    <div class="grid-row">
        <div class="column-half">
            <h2 class="heading-medium flush--ends">List of expenses</h2>
        </div>
        <div class="column-half text--right">
            <a href="{{ path('ndr_deputy_expenses_add', { 'ndrId': ndr.id, 'from': 'summary'}) }}" class="bold-small move-quarter--up action-link behat-link-add">
                <span class="icon icon-plus"></span>
                {{ 'summaryPage.addButton' | trans }}
            </a>
        </div>
    </div>
{% endif %}

{% if ndr.expenses | length > 0 %}
    <table class="check-your-answers columns-3">
        <thead>
            <tr>
                <th>Description of expense</th>
                <th class="text--right">Amount</th>
                <th>
                    <span class="visually-hidden">Actions</span>
                </th>
            </tr>
        </thead>
        <tbody>
            {% for expense in ndr.expenses %}
                <tr class="behat-region-expense-{{ expense.explanation | behat_namify }}">
                    <td class="">
                        {{ expense.explanation }}<br/>
                    </td>
                    <td class="numeric-small">
                        £{{ expense.amount | money_format }}
                    </td>
                    <td class="change-answer width-sixth soft-half--left hard--right">
                        <a href="{{ url('ndr_deputy_expenses_edit', { 'ndrId': ndr.id, 'expenseId': expense.id }) }}" class="behat-link-edit action-link">{{ 'summaryPage.edit'| trans }}</a>
                        <a href="{{ path('ndr_deputy_expenses_delete', { 'ndrId': ndr.id, 'expenseId': expense.id }) }}" class="push-half--left action-link behat-link-delete">{{ 'remove' | trans({}, 'common' ) }}</a>
                    </td>
                </tr>
            {% endfor %}
            <tr class="no-border">
                <td>
                    <span class="bold-small">Total amount</span>
                </td>
                <td class="numeric-small">
                    <span class="bold-small behat-region-expense-total">£{{ ndr.expensesTotalValue | money_format }}</span>
                </td>
                <td></td>
            </tr>
        </tbody>
    </table>

{% endif %}
