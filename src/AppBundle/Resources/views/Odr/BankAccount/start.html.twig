{% extends 'AppBundle:Layouts:application_new.html.twig' %}

{% import 'AppBundle:Macros:macros.html.twig' as macros %}

{% set translationDomain = "odr-bank-accounts" %}
{% trans_default_domain translationDomain %}
{% set transOptions = {'%client%': odr.client.firstname} %}

{% block htmlTitle %}{{ 'startPage.htmlTitle' | trans(transOptions) }}{% endblock %}
{% block pageTitle %}{{ 'startPage.pageSectionTitle' | trans(transOptions) }}{% endblock %}
{% block pageTitleClass %}heading-large{% endblock %}

{% block breadcrumbs %}{{ macros.breadcrumbs(odr) }}{% endblock %}

{% block pageContent %}

    <div class="text">
        <p>{{ 'startPage.pageSectionDescription1' | trans(transOptions) }}</p>
        <p>{{ 'startPage.pageSectionDescription2' | trans(transOptions) }}</p>
        <p>{{ 'startPage.pageSectionDescription3' | trans(transOptions) }}</p>

        <details class="push--bottom">
            <summary>
                <span class="summary">{{ 'startPage.hiddenText01.summary' | trans(transOptions) }}</span>
            </summary>
            <div class="panel panel-border-narrow">
                <p>{{ 'startPage.hiddenText01.content.para01' |trans(transOptions) }}</p>
                <ul class="list list-bullet">
                    <li>{{ 'startPage.hiddenText01.content.listItem01' | trans(transOptions) }}</li>
                    <li>{{ 'startPage.hiddenText01.content.listItem02' | trans(transOptions) }}</li>
                    <li>{{ 'startPage.hiddenText01.content.listItem03' | trans(transOptions) }}</li>
                    <li>{{ 'startPage.hiddenText01.content.listItem04' | trans(transOptions) }}</li>
                </ul>
                <p>{{ 'startPage.hiddenText01.content.para02' |trans(transOptions)|raw }}</p>
                <p>{{ 'startPage.hiddenText01.content.para03' |trans(transOptions) }}</p>
                <p>{{ 'startPage.hiddenText01.content.para04' |trans(transOptions)|raw }}</p>
            </div>
        </details>
    </div>

    <a href="{{ path('odr_bank_accounts_step', { 'odrId': odr.id, 'step': 1 }) }}" class="button button-start behat-link-start">{{ 'startPage.startButton' | trans }}</a>

{% endblock %}
