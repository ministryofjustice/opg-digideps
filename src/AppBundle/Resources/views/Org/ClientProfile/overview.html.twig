{% extends 'AppBundle:Layouts:application.html.twig' %}

{% import 'AppBundle:Macros:macros.html.twig' as macros %}

{% set translationDomain = "report-overview" %}
{% trans_default_domain translationDomain %}
{% set transOptions = {'%client%': client.firstname | e } %}

{% block htmlTitle %}{{ 'htmlTitle-ORG' | trans }}{% endblock %}
{% block pageTitle %}
    {{ 'pageTitle' | trans({}, 'client-profile') }} {{ client.fullname | title }}
{% endblock %}
{% block pageTitleClass %}heading-large flush--bottom behat-region-report-title{% endblock %}

{% block breadcrumbs %}
    <div class="breadcrumbs hard--bottom">
        <ol class="group">
            <li><a href="{{ path('org_dashboard') }}">Dashboard</a></li>
        </ol>
    </div>
{% endblock %}

{% block pageContent %}

    {# Use a random ID to ensure that changes to open sections don't persist #}
    <div class="govuk-accordion" data-module="accordion" id="overview-accordion-{{ "now" | date("U") }}">
        {% include 'AppBundle:Org/ClientProfile:_client.html.twig' with {
        '   client': client
        } %}

        <div class="govuk-accordion__section govuk-accordion__section--expanded">
            <div class="govuk-accordion__section-header">
            {% if report.isUnsubmitted %}
                <h3 class="govuk-accordion__section-heading">
                    <button class="govuk-accordion__section-button" aria-expanded="true">
                        <i class="icon icon-important-small"></i> {{ 'incompleteReport' | trans() }}
                    </button>
                </h3>
            {% else %}
                <h3 class="govuk-accordion__section-heading">
                    <button class="govuk-accordion__section-button" aria-expanded="true">
                        {{ 'currentReport' | trans() }}
                    </button>
                </h3>
            {% endif %}
            </div>
            <div class="govuk-accordion__section-content">
                {% if app.user.isDeputyProf %}
                    {% include 'AppBundle:Org/ClientProfile:_reportDetail-Prof.html.twig' with {
                    'report': report,
                    'incomplete': activeReport ? true : false
                    } %}
                {% else %}
                    {% include 'AppBundle:Org/ClientProfile:_reportDetail-PA.html.twig' with {
                    'report': report,
                    'incomplete': activeReport ? true : false
                    } %}
                {% endif %}
            </div>
        </div>

        {# if the report is unsubmitted, show the other active one #}
        {% if activeReport %}
            <div class="govuk-accordion__section">

                <div class="govuk-accordion__section-header">
                    <h3 class="govuk-accordion__section-heading">
                        <button class="govuk-accordion__section-button">
                            {{ ('currentReport') | trans }}
                        </button>
                    </h3>
                </div>

                <div class="govuk-accordion__section-content">
                    {% if app.user.isDeputyProf %}
                        {% include 'AppBundle:Org/ClientProfile:_reportDetail-Prof.html.twig' with {
                        'report': activeReport,
                        'incomplete': false
                        } %}
                    {% else %}
                        {% include 'AppBundle:Org/ClientProfile:_reportDetail-PA.html.twig' with {
                        'report': activeReport,
                        'incomplete': false
                        } %}
                    {% endif %}
                </div>
            </details>
        {% endif %}

        {% include 'AppBundle:Org/ClientProfile:_notes.html.twig' with {
            'notes': client.notes,
            'client': client
        } %}

        {% include 'AppBundle:Org/ClientProfile:_contacts.html.twig' with {
            'contacts': client.clientContacts,
                ' client': client
        } %}

        {% include 'AppBundle:Org/ClientProfile:_reports.html.twig' with {
            'reports': client.submittedReports,
                'client': client
        } %}
    </div>
{% endblock %}
