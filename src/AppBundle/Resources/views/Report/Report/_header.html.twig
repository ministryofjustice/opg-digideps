{% set translationDomain = "report-common" %}
{% trans_default_domain translationDomain %}

<h1 class="heading-xlarge flush--bottom behat-region-report-title">
    {{ report.period }} {{ 'report.header.report' | trans }}
</h1>
<h2 class="heading-large flush--top">{{ report.client.fullname }}</h2>

{% set translationDomain = "report-overview" %}
{% trans_default_domain translationDomain %}

{% if reportStatus.isReadyToSubmit and report.isDue and not report.unSubmitDate %}
    <div id="header-report-submit" class="hero hero-small behat-region-report-ready-banner">
        <h2 class="heading">{{ 'reportIsReady' | trans() }}</h2>
        <div class="message"><a class="button behat-link-report-submit" href="{{ path('report_review', {'reportId': report.id}) }}">{{ 'continue' | trans({}, 'common') }}</a></div>
    </div>
{% endif %}

{# TODO report.isDue needed here ? #}
{# @biggs to style #}
{% if report.unSubmitDate %}
    <div class="hero hero-small orangeWarning behat-region-report-hero-unsubmitted">
        <h2 class="heading">{{ 'reportIsUnsubmitted' | trans({'%newLine%': '\n'})  | nl2br}}</h2>
    </div>
{% endif %}

