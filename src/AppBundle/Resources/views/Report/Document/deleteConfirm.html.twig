{% extends 'AppBundle:Layouts:application.html.twig' %}

{% set translationDomain = "report-documents" %}
{% trans_default_domain translationDomain %}
{% set page = "removeDocument" %}

{% block htmlTitle %}{{ (page ~ '.htmlTitle') | trans }}{% endblock %}
{% block pageTitle %}{{ (page ~ '.h1Title') | trans }}{% endblock %}
{% block pageTitleClass %}heading-large{% endblock %}

{% block supportTitleTop %}
    <span class="heading-secondary">{{ (page ~ '.supportTitle') | trans }}</span>
{% endblock %}

{% block linkBack %}
    <a href="{{ backLink }}" class="link-back behat-link-step-back">{{ 'back' | trans({},'common') }}</a>
{% endblock %}

{% block pageContent %}

    <p class="text"><strong class="bold">{{ (page ~ '.question') | trans }}</strong></p>
    <table class="text push--bottom">
        <tbody>
            <tr>
                <th scope="row">{{ (page ~ '.documentFilename') | trans }}</th>
                <td>{{ document.getFilename() }}</td>
            </tr>
            <tr>
                <th scope="row">{{ (page ~ '.dateAttached') | trans }}</th>
                <td>{{ document.getCreatedOn() | date('d F Y') }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('delete_document_confirm', { documentId: document.id, 'from': fromPage }) }}" id="document-delete" class="button push-half--right behat-link-confirm">{{ (page ~ '.linkButtonLabel') | trans }}</a>

    <a href="{{ backLink }}" class="button-link behat-link-confirm-cancel">{{ 'cancel' | trans({}, 'common') }}</a>

{% endblock %}

