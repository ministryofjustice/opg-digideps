{% extends 'AppBundle:Layouts:application.html.twig' %}

{% import 'AppBundle:Macros:macros.html.twig' as macros %}

{% set translationDomain = "report-money-transfer" %}
{% trans_default_domain translationDomain %}
{% set transOptions = {'%client%': report.client.firstname | e } %}

{% block htmlTitle %}{{ 'stepPage.htmlTitle' | trans(transOptions) }}{% endblock %}
{% block pageTitle %}
    {{ 'stepPage.pageTitle' | trans(transOptions) }}
{% endblock %}
{% block pageTitleClass %}heading-large{% endblock %}

{% block supportTitleTop %}
    <span class="heading-secondary">{{ 'stepPage.supportTitle' | trans }}</span>
{% endblock %}

{% block linkBack %}
    {{ macros.linkBackStep(backLink, 'back' | trans({}, 'common')) }}
{% endblock %}

{% block pageContent %}
    {{ form_start(form, {attr: {novalidate: 'novalidate', class: '' } }) }}

    {% if step == 1 %}
        {{ form_select(form.accountFromId, 'form.accountFrom', {
            'inputClass': 'js-transfer-from'
        }) }}
        {{ form_select(form.accountToId, 'form.accountTo', {
            'inputClass': 'js-transfer-to'
        }) }}
    {% endif %}

    {% if step == 2 %}
        {{ form_input(form.amount, 'form.amount', {
            'inputPrefix' : 'Â£',
            'inputClass' : 'form-control-1-4 js-format-currency',
            'labelClass' : 'text'
        }) }}

        {% set accountFrom = ((transfer.accountFrom.bank is not empty) ? transfer.accountFrom.bank ~ ' - ' : '') ~  transfer.accountFrom.accountTypeText ~ ' (****' ~  transfer.accountFrom.accountNumber ~ ')' %}
        {% set accountTo = ((transfer.accountTo.bank is not empty) ? transfer.accountTo.bank ~ ' - ' : '') ~ transfer.accountTo.accountTypeText ~ ' (****' ~  transfer.accountTo.accountNumber ~ ')' %}

        <p class="text flush--bottom">From: {{ accountFrom }}</p>
        <p class="text flush--top">To: {{ accountTo }}</p>

    {% endif %}

    {{ macros.saveAndContinueButton(form.save) }}

    {{ form_end(form) }}

{% endblock %}
